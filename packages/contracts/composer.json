{
    "name": "coverage-robot/contracts",
    "description": "Decoupled contracts usable across the services",
    "type": "symfony-bundle",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "~8.5.0",
        "symfony/validator": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Packages\\Contracts\\": "src/"
        }
    },
    "scripts": {
        "lint:style": "phpcs",
        "lint:rector": "rector process --dry-run",
        "lint:static-analysis": "psalm",
        "lint:security": "psalm --taint-analysis"
    },
    "repositories": [
        {"type": "composer", "url": "https://coverage-robot.repo.repman.io"}
    ],
    "require-dev": {
        "rector/rector": "^2.0",
        "vimeo/psalm": "^6.13 || 6.x-dev",
        "squizlabs/php_codesniffer": "^4.0"
    }
}
