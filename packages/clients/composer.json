{
    "name": "coverage-robot/clients",
    "description": "Shared clients across the services",
    "type": "library",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.3",
        "knplabs/github-api": "^3.13",
        "symfony/http-client": "^7.0",
        "nyholm/psr7": "^1.8",
        "lcobucci/jwt": "^5.2",
        "symfony/http-kernel": "^7.0",
        "symfony/config": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "coverage-robot/telemetry": "1.5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3 || ^11.0",
        "rector/rector": "^0.19.5 || ^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Packages\\Clients\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Packages\\Clients\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint:rector": "rector process --dry-run",
        "test:unit": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --configuration=./phpunit.xml.dist"
        ]
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "repositories": [
        {"type": "composer", "url": "https://coverage-robot.repo.repman.io"}
    ]
}
