{
    "name": "coverage-robot/clients",
    "description": "Shared clients across the services",
    "type": "library",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "~8.5.0",
        "knplabs/github-api": "^3.13",
        "symfony/http-client": "^8.0",
        "nyholm/psr7": "^1.8",
        "lcobucci/jwt": "^5.2",
        "symfony/http-kernel": "^8.0",
        "symfony/config": "^8.0",
        "symfony/dependency-injection": "^8.0",
        "coverage-robot/telemetry": "^1.6",
        "symfony/uid": "^8.0",
        "async-aws/s3": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "rector/rector": "^2.0",
        "vimeo/psalm": "^6.13 || 6.x-dev",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Packages\\Clients\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Packages\\Clients\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint:style": "phpcs",
        "lint:rector": "rector process --dry-run",
        "lint:static-analysis": "psalm",
        "lint:security": "psalm --taint-analysis",
        "test:unit": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --configuration=./phpunit.xml.dist"
        ]
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://coverage-robot.repo.repman.io"
        }
    ]
}
