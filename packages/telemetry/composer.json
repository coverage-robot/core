{
    "name": "coverage-robot/telemetry",
    "description": "Shared telemetry tooling across the services",
    "type": "symfony-bundle",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.3",
        "psr/log": "^3.0",
        "coverage-robot/contracts": "^1.5",
        "symfony/serializer": "^7.0",
        "symfony/http-kernel": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/config": "^7.0",
        "symfony/clock": "^7.0",
        "monolog/monolog": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2",
        "estahn/phpunit-json-assertions": "^4.0",
        "symfony/property-access": "^7.1",
        "bref/bref": "^2.1",
        "rector/rector": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Packages\\Telemetry\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Packages\\Telemetry\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint:rector": "rector process --dry-run",
        "test:unit": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --configuration=./phpunit.xml.dist"
        ]
    },
    "repositories": [
        {"type": "composer", "url": "https://coverage-robot.repo.repman.io"}
    ]
}
