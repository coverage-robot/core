{
    "name": "coverage-robot/telemetry",
    "description": "Shared telemetry tooling across the services",
    "type": "symfony-bundle",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "~8.5.0",
        "psr/log": "^3.0",
        "coverage-robot/contracts": "^1.6",
        "symfony/serializer": "^7.0",
        "symfony/http-kernel": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/config": "^7.0",
        "symfony/clock": "^7.0",
        "monolog/monolog": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "estahn/phpunit-json-assertions": "^4.0",
        "symfony/property-access": "^7.1",
        "bref/bref": "^3",
        "rector/rector": "^2.0",
        "vimeo/psalm": "^6.13 || 6.x-dev",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Packages\\Telemetry\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Packages\\Telemetry\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint:style": "phpcs",
        "lint:rector": "rector process --dry-run",
        "lint:static-analysis": "psalm",
        "lint:security": "psalm --taint-analysis",
        "test:unit": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --configuration=./phpunit.xml.dist"
        ]
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://coverage-robot.repo.repman.io"
        }
    ]
}
