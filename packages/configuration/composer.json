{
    "name": "coverage-robot/configuration",
    "description": "Tooling to access user-defined configuration settings",
    "type": "symfony-bundle",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "~8.4.0",
        "symfony/http-kernel": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "async-aws/dynamo-db": "^3.0",
        "coverage-robot/contracts": "^1.5",
        "psr/log": "^3.0",
        "symfony/yaml": "^7.0",
        "symfony/validator": "^7.0",
        "symfony/serializer": "^7.0",
        "symfony/property-access": "^7.0",
        "async-aws/async-aws-bundle": "^1.12"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "rector/rector": "^2.0"
    },
    "scripts": {
        "lint:rector": "rector process --dry-run",
        "test:unit": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --configuration=./phpunit.xml.dist"
        ]
    },
    "autoload": {
        "psr-4": {
            "Packages\\Configuration\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Packages\\Configuration\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {"type": "composer", "url": "https://coverage-robot.repo.repman.io"}
    ]
}
