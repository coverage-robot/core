{
    "name": "coverage-robot/local",
    "description": "Shared local tooling across the services",
    "type": "symfony-bundle",
    "version": "1.0.0",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "psr/log": "^3.0",
        "symfony/serializer": "^7.0",
        "symfony/http-kernel": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/config": "^7.0",
        "symfony/console": "^7.0",
        "coverage-robot/event": "^1.0",
        "symfony/property-info": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "bref/bref": "^2.1",
        "rector/rector": "^0.19.5"
    },
    "autoload": {
        "psr-4": {
            "Packages\\Local\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Packages\\Local\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint:rector": "rector process --dry-run",
        "test:unit": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --configuration=./phpunit.xml.dist"
        ]
    },
    "repositories": [
        {"type": "composer", "url": "https://coverage-robot.repo.repman.io"}
    ]
}
