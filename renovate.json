{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "labels": [
        "dependencies",
        "bump-patch",
        "chore"
    ],
    "packageRules": [
        {
            "matchFileNames": [
                "**/composer.json",
                "**/composer.lock"
            ],
            "addLabels": [
                "php"
            ]
        },
        {
            "matchFileNames": [
                "**/.terraform.lock.hcl"
            ],
            "addLabels": [
                "terraform"
            ]
        },
        {
            "matchFileNames": [
                "services/**"
            ],
            "additionalBranchPrefix": "services/"
        },
        {
            "matchFileNames": [
                "packages/**"
            ],
            "additionalBranchPrefix": "packages/"
        },
        {
            "matchFileNames": [
                "infrastructure/**"
            ],
            "additionalBranchPrefix": "infrastructure/"
        }
    ]
}