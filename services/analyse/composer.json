{
    "name": "coverage-robot/core",
    "description": "The analyse coverage service.",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "~8.4.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "async-aws/async-aws-bundle": "^1.12",
        "async-aws/dynamo-db": "^3.0",
        "bref/bref": "^2.0",
        "bref/symfony-bridge": "^1.0.0",
        "coverage-robot/clients": "^1.6",
        "coverage-robot/configuration": "^1.6",
        "coverage-robot/contracts": "^1.6",
        "coverage-robot/event": "^1.6",
        "coverage-robot/message": "^1.6",
        "coverage-robot/telemetry": "^1.6",
        "doctrine/sql-formatter": "^1.1",
        "google/cloud-bigquery": "^1.24",
        "phpdocumentor/reflection-docblock": "^5.3",
        "phpstan/phpdoc-parser": "^2.0",
        "sebastian/diff": "^7.0",
        "sentry/sentry-symfony": "^5.0",
        "symfony/clock": "7.3.*",
        "symfony/console": "7.3.*",
        "symfony/dotenv": "7.3.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "7.3.*",
        "symfony/monolog-bundle": "^3.8",
        "symfony/property-access": "7.3.*",
        "symfony/property-info": "7.3.*",
        "symfony/runtime": "7.3.*",
        "symfony/serializer": "7.3.*",
        "symfony/validator": "7.3.*",
        "symfony/yaml": "7.3.*"
    },
    "require-dev": {
        "coverage-robot/local": "^1.6",
        "phpunit/phpunit": "^12",
        "psalm/plugin-symfony": "^5.2.7",
        "rector/rector": "^2.0",
        "spatie/phpunit-snapshot-assertions": "^5.1",
        "squizlabs/php_codesniffer": "^4.0",
        "symfony/maker-bundle": "^1.48",
        "vimeo/psalm": "^6.13"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "scripts": {
        "lint:style": "phpcs",
        "lint:rector": "rector process --dry-run",
        "lint:static-analysis": "psalm",
        "lint:security": "psalm --taint-analysis",
        "test:unit": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --configuration=./phpunit.xml.dist"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://coverage-robot.repo.repman.io"
        }
    ],
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.2.*"
        }
    }
}
